<Window x:Class="Module_13_WPF_Delegat_HomeWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Module_13_WPF_Delegat_HomeWork"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="434" Width="800" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Manager" 
                HorizontalAlignment="Left" 
                Margin="154,0,0,0" 
                VerticalAlignment="Center" 
                Height="36" 
                Width="144"
                Background="Bisque"
                Click="ClickManagerSelection"/>
        <Button Content="Consultant" 
                HorizontalAlignment="Left" 
                Margin="500,0,0,0" 
                VerticalAlignment="Center" 
                Height="36" 
                Width="144"
                Background="Bisque"
                Click="ClickConsultantSelection"/>

    </Grid>
</Window>
